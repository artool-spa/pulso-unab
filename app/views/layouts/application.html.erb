<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? full_title(yield(:title)) : "DDM-Semaphore" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "" %>">
    <%= font_tag([:open_sans, 300, 500], [:lato, 400, 700]) %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
	  <%= javascript_include_tag(controller_name, 'data-turbolinks-track' => true) if javascript_exists?(controller_name) %>
    <script src="https://cdn.jsdelivr.net/npm/autonumeric@4.2.0"></script>
    <!--script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js"></script-->
    <%= csrf_meta_tags %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <header>
      <%= render 'layouts/navigation' %>
      <%= render 'layouts/messages' %>
    </header>
    <main role="main">
       <%= yield %>
    </main>
  </body>
</html>
