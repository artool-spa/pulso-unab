<%= form_with(model: client, local: true) do |form| %>
  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :name, "Nombre" %>
      <%= form.text_field :name, id: :client_name, class: "form-control", required: true %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-4">
      <%= form.label :fb_ad_account_id, "ID Cuenta Publicitaria FB" %>
      <%= form.number_field :fb_ad_account_id, id: :client_fb_ad_account_id, class: "form-control" %>
    </div>
    <div class="form-group col-md-2">
      <%= form.label :fb_dollar_conv, "FBAds USD a CLP" %>
      <div class="input-group mb-2">
        <div class="input-group-prepend">
          <div class="input-group-text">$</div>
        </div>
        <%= form.number_field :fb_dollar_conv, id: :sheet_fb_dollar_conv, class: "form-control", required: true %>
      </div>
    </div>
    <div class="form-group col-md-4">
      <%= form.label :ga_ad_account_id, "ID Cliente Google Ads" %>
      <%= form.text_field :ga_ad_account_id, id: :client_ga_ad_account_id, class: "form-control" %>
    </div>
    <div class="form-group col-md-2">
      <%= form.label :ga_dollar_conv, "GAds USD a CLP" %>
      <div class="input-group mb-2">
        <div class="input-group-prepend">
          <div class="input-group-text">$</div>
        </div>
        <%= form.number_field :ga_dollar_conv, id: :sheet_ga_dollar_conv, class: "form-control", required: true %>
      </div>
    </div>
  </div>


  <div class="form-row">
    <div class="form-group col-md-2">
      <div class="custom-control custom-checkbox">
        <%= form.check_box :is_enabled, class: "custom-control-input", id: "client_is_enabled" %>
        <%= form.label "is_enabled", "Cliente Habilitado", class: "custom-control-label" %>
      </div>
    </div>
    <div class="form-group col-md-10">

    </div>
  </div>

  <!--div class="field">
    <%= form.label :main_color %>
    <%= form.text_field :main_color %>
  </div-->

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
